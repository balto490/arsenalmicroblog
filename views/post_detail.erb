<div class="col-lg-8">
	<div id="post_detail">
		<h2><%= @post.title %></h2>
		<h4>By: <%= @post.user.username %></h4>
		<p id="article"><%= @post.blog_post %></p>
	</div>
</div>
<div class="col-lg-4">
	<h4 id="otherposts">Other Posts by this Author</h4>
	<div id="posts" class="col-lg-4">
	<% @post.user.blogs.each do |b| %>
		<h3><%=b.title%></h3>
		<h6>By: <%= b.user.username %></h6>
		 <h5><a href="/post/<%= b.id %>">Read Article</a></h5>
		<h6><%=b.created_at%></h6>
	<%end%>
	</div>
</div>